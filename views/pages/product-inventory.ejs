<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <% include ../partials/header.ejs %>
</head>

<body>
    <% include ../partials/nav.ejs %>
    <main>
        <div>
            <h1><%= title %></h1>
        </div>

        <div class="main-customers">
            <div>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Quantity</th>
                        </tr>
                    </thead>
                    <% for (let i = 0; i < productinventorylist.length; i++) { %>
                    <tr>
                        <td><%= productinventorylist[i]['product_name'] %></td>
                        <td><%= productinventorylist[i]['category_name'] %></td>
                        <td><%= productinventorylist[i]['quantity'] %></td>
                    </tr>
                    <% } %>
                </table>
            </div>
    </main>
    <% include ../partials/footer.ejs %>
    <% include ../partials/scripts.ejs %>
</body>

</html>