<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <% include ../partials/header.ejs %>
</head>

<body>
    <% include ../partials/nav.ejs %>
    <main>
        <div>
            <form action="/users/save_user" method="post">
                <input type="hidden" name="docreate" value="<%= docreate ? 'create' : 'update' %>">
                <p>UserId:
                    <% if (docreate) { %>
                    <input type="text" name="userid" value="">
                    <% } else { %>
                    <input type="text" readonly name="userid" value="<%= userid %>">
                    <% } %>
                </p>
                <p>Firstname:
                    <input type="text" name="first_name" value="<%= user ? user.first_name : '' %>">
                </p>
                <p>Lastname:
                    <input type="text" name="last_name" value="<%= user ?  user.last_name : '' %>">
                </p>
                <p>Username:
                    <input type="text" name="username" value="<%= user ? user.username : '' %>">
                </p>
                <p>Password:
                    <input type="text" name="passwd" value="<%= user ?  user.passwd : '' %>">
                </p>
                <br>
                <input type="submit" value="Submit">
            </form>
        </div>
    </main>

    <% include ../partials/scripts.ejs %>
</body>

</html>